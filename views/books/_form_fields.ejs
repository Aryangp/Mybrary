<div>
  <label for="">Title</label>
  <input type="text" name="title" value="<%= book.name %>" >
</div>
<div>
  <label for="">Author</label>
  <select name="author" id="author">
    <% authors.forEach(author => { %> <% if(author.id==book.author){ %>
    <option
      selected
      value="<%= author.id %>"
      label="<%= author.name %>"
    ></option>
    <% }else { %>
    <option value="<%= author.id %>" label="<%= author.name %>"></option>
    <% } %> <% }) %>
  </select>
<div>  
  <label for="">Publish Date</label>
  <input
    type="date"
    name="publishDate"
    value="<%= book.publishDate == null? '':book.publishDate.toISOString().split('T')[0] %> ">
  
</div>
<div>  
  <label for="">Page Count</label>
  <input
    type="number"
    name="pageCount"
    min="1"
    value="<%= book.pageCount %>">
  
</div>
<div>  
  <label for="">Cover</label>
  <input
    type="file"
    name="cover"
  
</div>
<div>  
  <label for="">description</label>
  <textarea
    name="description"><%= book.description %> </textarea>

</div>
